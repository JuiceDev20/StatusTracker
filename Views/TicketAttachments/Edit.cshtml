@model StatusTracker.Models.TicketAttachment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-primary">Ticket Attachment</h4>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="FileData" />
                    @*<input type="hidden" asp-for="FileName" />*@

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Created" class="control-label"></label>
                        <input asp-for="Created" class="form-control" />
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketId" class="control-label">Ticket</label>
                        <select asp-for="TicketId" class="form-control" asp-items="ViewBag.TicketId"></select>
                        <span asp-validation-for="TicketId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label">Owner</label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (User.IsInRole("Admin, ProjectManager, Developer"))
                        {
                            <input type="submit" value="Save" class="btn btn-outline-primary" />
                        }

                    </div>
                </form>
            </div>
        </div>       
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-controller="" asp-action="Index">Back to List</a>
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
