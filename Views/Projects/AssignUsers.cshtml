@model StatusTracker.Models.ViewModels.ManageProjectUsersViewModel

@{
    ViewData["Title"] = "AssignUsersViewModel";
}

<h3>Assign Project Users View Model</h3>

<div class="row">
    <div class="card col-6" style="margin:2px">
        <div class="card-body">
            <h2 class="m-t-0 h3"><b> @Model.Project.Name</b></h2>
            <p class="text-muted font-13 m-b-30">
                Current users assigned to the project: @Model.Project.Name. Use the dropdown to select the projects that this user should be assigned. Once projects are selected, click "Assign Projects" to submit the form.
            </p>
            <hr />
            <form asp-controller="Projects" asp-action="AssignUsers" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Project.Id">
                <input type="hidden" asp-for="@Model.Project.Name">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.Users" class="control-label">Projects for @Model.Project.Name</label>
                        <select asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                    </div>
                </div>
                <hr />
                <div class="col-12">
                    <div class="form-group pull-right">
                        <input type="submit" value="Assign Users" class="btn btn-info" />
                        <a class="btn btn-info" asp-controller="Projects" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

