@model StatusTracker.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-primary">Project</h4>
                    <dl class="row">
                        <dt class="col-sm-3">
                            Name
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            ImagePath
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ImagePath)
                        </dd>
                        <dt class="col-sm3">
                            ImageData
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ImageData)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div> 
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Back to Dashboard</a>
    </form>
</div>
