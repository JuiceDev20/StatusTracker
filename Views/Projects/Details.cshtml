@model StatusTracker.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
        <div class="col-6">
            <div class="card bg-light">
                <div class="card-body" style="height:250px">
                    <h4 class="card-title text-primary">Project Details</h4>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Name
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-2">
                            Team Members
                        </dt>
                        <dd class="col-sm-10">
                            @foreach (var user in Model.ProjectUsers)
                            {
                                @user.User.FullName <br />
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-outline-success" asp-controller="Tickets" asp-action="Create" asp-route-id="@Model.Id">Create Ticket</a>
    <a class="btn btn-outline-primary" asp-action="AssignUsers" asp-route-id="@Model.Id">Assign Users</a>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Back to Dashboard</a>
</div>
