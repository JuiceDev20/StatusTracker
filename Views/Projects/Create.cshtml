@model StatusTracker.Models.Project

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-primary">Project</h4>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="filename" class="control-label">Project Attachment</label><br />
                        <input name="attachment" type="file" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </div>
</div>  

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">Back to Dashboard</a>
</div>