@model StatusTracker.Models.TicketComment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<hr />

<div class="row">
    <div class="col-9">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-primary">Ticket Comment</h4>
                <div class="row">
                    <div class="col-md-8">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Comment" class="control-label"></label>
                                <input asp-for="Comment" class="form-control" />
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TicketId" class="control-label">Ticket</label>
                                <select asp-for="TicketId" class="form-control" asp-items="ViewBag.TicketId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserId" class="control-label">Owner</label>
                                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-outline-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a class="btn btn-outline-info" asp-controller="TicketComments" asp-action="Index">Back to List</a>
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
