@model StatusTracker.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />

    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-primary">Ticket</h4>
                    <dl class="row">
                        <dt class="col-sm-3">
                            Title
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-3">
                            Description
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-3">
                            Created
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Created)
                        </dd>
                        <dt class="col-sm-3">
                            Updated
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Updated)
                        </dd>
                        <dt class="col-sm-3">
                            Project
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Project.Name)
                        </dd>
                        <dt class="col-sm-3">
                            Ticket Type
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TicketType.Name)
                        </dd>
                        <dt class="col-sm-3">
                            Ticket Priority
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TicketPriority.Name)
                        </dd>
                        <dt class="col-sm-3">
                            Ticket Status
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.TicketStatus.Name)
                        </dd>
                        <dt class="col-sm-3">
                            Owner
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.OwnerUser.FullName)
                        </dd>
                        <dt class="col-sm-3">
                            Developer
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DeveloperUser.FullName)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
        {
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
        }

        <a class="btn btn-outline-info" asp-controller="Tickets" asp-action="MyTickets">Back to List</a>
        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Back to Dashboard</a>
    </form>
</div>

@if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
{
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Dashboard">Back to Dashboard 2</a>
}