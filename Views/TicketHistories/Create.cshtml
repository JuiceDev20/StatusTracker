@model StatusTracker.Models.TicketHistory

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket History</h4>
<hr />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-primary"></h4>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TicketId" class="control-label">Ticket</label>
                        <select asp-for="TicketId" class="form-control" asp-items="ViewBag.TicketId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Property" class="control-label"></label>
                        <input asp-for="Property" class="form-control" />
                        <span asp-validation-for="Property" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OldValue" class="control-label">Old Value</label>
                        <input type="hidden" asp-for="OldValue" class="form-control" />
                        <span asp-validation-for="OldValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewValue" class="control-label">New Value</label>
                        <input type="hidden" asp-for="NewValue" class="form-control" />
                        <span asp-validation-for="NewValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Created" class="control-label"></label>
                        <input type="hidden" asp-for="Created" class="form-control" />
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label">Owner</label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                    </div>
                </form>
            </div>
        </div>      
    </div>
</div>

<div>
    <a class="btn btn-info" asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
