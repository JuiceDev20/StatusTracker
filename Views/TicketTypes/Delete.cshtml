@model StatusTracker.Models.TicketType

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ticket Type</h4>
    <hr />

    <dl class="row">
        <dt class = "col-sm-3">
            Name
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
        <a class="btn btn-outline-info" asp-controller="TicketTypes" asp-action="Index">Back to List</a>
    </form>
</div>
