@model StatusTracker.Models.TicketStatus

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<hr />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-primary">Ticket Status</h4>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (User.IsInRole("Admin, ProjectManager, Developer"))
                        {
                            <input type="submit" value="Save" class="btn btn-outline-primary" />
                            <a class="btn btn-outline-info" asp-controller="TicketStatus" asp-action="Index">Back to List</a>
                        }

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
{
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Back to Dashboard 1</a>
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Dashboard">Back to Dashboard 2</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
